{
  "name": "haddy-sim-hub-client",
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "jest --watch",
    "test_ci": "jest",
    "lint": "cross-env LINT_CONFIG=production ng lint --eslint-config eslint.config.js",
    "build:prod": "ng build --prod"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "moduleNameMapper": {
      "@components/(.*)": "<rootDir>/src/app/components/$1",
      "@services/(.*)": "<rootDir>/src/app/services/$1",
      "@testing/(.*)": "<rootDir>/src/app/testing/$1",
      "@displays/(.*)": "<rootDir>/src/app/displays/$1"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/jest/setup.ts"
    ]
  },
  "private": true,
  "engines": {
    "node": "^20.11.0",
    "npm": ">=10.2.4"
  },
  "dependencies": {
    "@angular/animations": "^18.2.7",
    "@angular/cdk": "^18.2.7",
    "@angular/common": "^18.2.7",
    "@angular/compiler": "^18.2.7",
    "@angular/core": "^18.2.7",
    "@angular/forms": "^18.2.7",
    "@angular/material": "^18.2.7",
    "@angular/platform-browser": "^18.2.7",
    "@angular/platform-browser-dynamic": "^18.2.7",
    "@angular/router": "^18.2.7",
    "@microsoft/signalr": "^8.0.7",
    "@ngneat/until-destroy": "^10.0.0",
    "bootstrap": "^5.3.3",
    "bootstrap-icons": "^1.11.3",
    "ngx-signalr-websocket": "^1.0.0",
    "rxjs": "~7.8.1",
    "tslib": "^2.7.0",
    "zone.js": "^0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.7",
    "@angular-eslint/builder": "18.4.1",
    "@angular-eslint/eslint-plugin": "18.4.1",
    "@angular-eslint/eslint-plugin-template": "18.4.1",
    "@angular-eslint/schematics": "18.4.1",
    "@angular-eslint/template-parser": "18.4.1",
    "@angular/cli": "~18.2.7",
    "@angular/compiler-cli": "^18.2.7",
    "@eslint/compat": "^1.2.3",
    "@stylistic/eslint-plugin-ts": "2.11.0",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.9.1",
    "@typescript-eslint/eslint-plugin": "8.15.0",
    "@typescript-eslint/parser": "8.15.0",
    "angular-eslint": "^18.4.1",
    "cross-env": "^7.0.3",
    "eslint": "9.15.0",
    "eslint-plugin-app": "file:./eslint-plugin-app",
    "eslint-plugin-deprecation": "3.0.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jsdoc": "50.5.0",
    "eslint-plugin-prefer-arrow": "1.2.3",
    "eslint-plugin-rxjs": "5.0.3",
    "eslint-plugin-rxjs-angular": "2.0.1",
    "globals": "^15.12.0",
    "jest": "^29.7.0",
    "jest-preset-angular": "^14.3.2",
    "typescript": "5.4.2",
    "typescript-eslint": "8.15.0"
  }
}
